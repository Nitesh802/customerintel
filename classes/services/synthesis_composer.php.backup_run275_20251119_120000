<?php
/**
 * Synthesis Composer Service
 *
 * Stage 3: Composes AI-powered synthesis reports from canonical NB datasets.
 *
 * This service was extracted from synthesis_engine.php during M1T5-8 restoration.
 * It handles the core compose_synthesis_report() logic that generates 15-section
 * intelligence narratives using OpenAI GPT-4.
 *
 * Pipeline: raw_collector ‚Üí canonical_builder ‚Üí synthesis_composer ‚Üí qa_engine
 *
 * @package    local_customerintel
 * @copyright  2025 CustomerIntel
 * @license    http://www.gnu.org/copyleft/gpl.html GNU GPL v3 or later
 */

namespace local_customerintel\services;

defined('MOODLE_INTERNAL') || die();

require_once(__DIR__ . '/voice_enforcer.php');
require_once(__DIR__ . '/qa_scorer.php');
require_once(__DIR__ . '/telemetry_logger.php');

// NOTE: CitationManager class is defined in synthesis_engine.php
// We use the parent engine's CitationManager, not a duplicate

/**
 * Synthesis Composer - Stage 3 Service
 */
class synthesis_composer {

    /** @var object $synthesis_engine Reference to parent synthesis_engine for helper methods */
    private $synthesis_engine;

    /**
     * Constructor
     *
     * @param object $synthesis_engine Parent synthesis_engine instance
     */
    public function __construct($synthesis_engine) {
        $this->synthesis_engine = $synthesis_engine;
    }

    /**
     * Compose synthesis report from canonical NB dataset
     *
     * This is the core Stage 3 function that:
     * 1. Loads canonical dataset
     * 2. Generates 15 AI-powered narrative sections
     * 3. Assembles markdown report
     * 4. Calculates QA scores
     * 5. Saves synthesis_final_bundle artifact
     *
     * @param int $runid Run ID
     * @return bool Success status
     */
    public function compose_synthesis_report($runid) {
        global $DB;

        // M2 Task 0.1: Set status to 'processing' at start of synthesis
        $DB->update_record('local_ci_run', (object)[
            'id' => $runid,
            'status' => 'processing',
            'timemodified' => time()
        ]);

        // Phase timing and trace
        $this->log_trace($runid, 'synthesis', 'Synthesis composer started - status set to processing', ['runid' => $runid]);
        $this->start_phase_timer($runid, 'synthesis_composition');

        try {
            // Step 1: Load canonical dataset
            $artifact = $DB->get_record('local_ci_artifact', [
                'runid' => $runid,
                'artifacttype' => 'canonical_nb_dataset'
            ]);

            if (!$artifact) {
                throw new \Exception('Canonical dataset not found for runid: ' . $runid);
            }

            $canonical = json_decode($artifact->jsondata, true);
            if (json_last_error() !== JSON_ERROR_NONE) {
                throw new \Exception('Failed to decode canonical dataset: ' . json_last_error_msg());
            }

            $metadata = $this->get_or($canonical, 'metadata', []);
            $nb_data = $this->get_or($canonical, 'nb_data', []);

            $this->log_trace($runid, 'synthesis', 'Canonical dataset loaded', [
                'nb_count' => count($nb_data),
                'metadata_keys' => array_keys($metadata)
            ]);

            // Step 2: Initialize CitationManager through parent engine
            $citation_mgr = $this->synthesis_engine->create_citation_manager();

            // Step 3: Define authoritative NB to section mapping
            $nb_mapping = [
                'NB1' => 'Company Overview',
                'NB2' => 'Financial Performance',
                'NB3' => 'Leadership & Governance',
                'NB4' => 'Strategic Initiatives',
                'NB5' => 'Operational Risks',
                'NB6' => 'Technology & Digital',
                'NB7' => 'Market & Competitive Positioning',
                'NB8' => 'Organizational Structure & Culture',
                'NB9' => 'Stakeholders & Partnerships',
                'NB10' => 'ESG / Sustainability',
                'NB11' => 'Innovation & Collaboration',
                'NB12' => 'Customer & Market Insights',
                'NB13' => 'Emerging Trends & Strategic Outlook',
                'NB14' => 'Growth Opportunities',
                'NB15' => 'Engagement Pathways & Closing Summary'
            ];

            // Step 4: Build Executive Summary using existing infrastructure
            $this->log_trace($runid, 'synthesis', 'Generating executive summary');

            // Prepare inputs for draft_executive_insight
            $exec_inputs = [
                'nb' => $nb_data,
                'company_source' => isset($metadata['source_company']) ? (object)$metadata['source_company'] : null,
                'company_target' => isset($metadata['target_company']) ? (object)$metadata['target_company'] : null
            ];

            $patterns = $this->detect_patterns($exec_inputs);
            $exec_result = $this->draft_executive_insight($exec_inputs, $patterns, $citation_mgr);
            $exec_summary = $this->get_or($exec_result, 'text', 'Executive summary pending.');

            // Apply voice artifact removal to executive summary
            $exec_summary = $this->remove_voice_artifacts($exec_summary);

            // Step 5: Draft each section
            $this->log_trace($runid, 'synthesis', 'Drafting sections');
            $sections = [];
            $section_count = 0;

            foreach ($nb_mapping as $nb_code => $section_title) {
                $nb_record = $this->get_or($nb_data, $nb_code, null);

                if (!$nb_record || $this->is_placeholder_nb($nb_record)) {
                    $this->log_trace($runid, 'synthesis', "Skipping placeholder: {$nb_code}");
                    continue;
                }

                // Draft section content
                $section_content = $this->draft_section_for_nb(
                    $nb_code,
                    $nb_record,
                    $section_title,
                    $metadata,
                    $citation_mgr,
                    $patterns,
                    $exec_inputs
                );

                // Apply voice enforcement and artifact removal
                if (!empty($section_content)) {
                    $section_content = $this->apply_voice_to_text($section_content);
                    $section_content = $this->remove_voice_artifacts($section_content);

                    // M3 Task 3.2: Generate formatted HTML for section
                    $formatted_html = null;
                    try {
                        $this->log_trace($runid, 'formatting', "[M3] Attempting to format section {$nb_code}: {$section_title}");

                        $formatted_html = $this->generate_formatted_section(
                            $nb_code,
                            $section_content,
                            [
                                'source_company_name' => isset($metadata['source_company']['name'])
                                    ? $metadata['source_company']['name']
                                    : 'Source Company',
                                'target_company_name' => isset($metadata['target_company']['name'])
                                    ? $metadata['target_company']['name']
                                    : 'Target Company',
                                'section_title' => $section_title
                            ],
                            $runid
                        );

                        if ($formatted_html) {
                            $this->log_trace($runid, 'formatting', "[M3] ‚úì Section {$nb_code} formatted successfully (" . strlen($formatted_html) . " chars)");
                        } else {
                            $this->log_trace($runid, 'formatting', "[M3] Section {$nb_code} formatting returned null, using plain fallback");
                        }
                    } catch (\Exception $e) {
                        $this->log_trace($runid, 'formatting', "[M3] Section {$nb_code} formatting failed: " . $e->getMessage());
                        $formatted_html = null;
                    }

                    $sections[$nb_code] = [
                        'title' => $section_title,
                        'content' => $section_content,         // Plain text (fallback)
                        'formatted_html' => $formatted_html,   // Structured HTML (M3)
                        'word_count' => str_word_count($section_content)
                    ];

                    $section_count++;
                }
            }

            $this->log_trace($runid, 'synthesis', "Generated {$section_count} sections");

            // M2.1: Generate structured executive summary from completed sections
            $this->log_trace($runid, 'synthesis', '[M2.1] Generating structured executive summary');
            $enhanced_exec_summary = $this->synthesis_engine->generate_executive_summary(
                $sections,
                $metadata,
                $runid
            );

            // M2.1: Additional cleanup for both fresh and cached summaries (catch-all)
            if ($enhanced_exec_summary) {
                $enhanced_exec_summary = str_replace('<p>.</p>', '', $enhanced_exec_summary);
                $enhanced_exec_summary = preg_replace('/<p[^>]*>\s*\.\s*<\/p>/i', '', $enhanced_exec_summary);
                $enhanced_exec_summary = preg_replace('/>\s*\.\s*$/s', '', $enhanced_exec_summary);
                $enhanced_exec_summary = trim($enhanced_exec_summary);
                $this->log_trace($runid, 'synthesis', '[M2.1] Applied catch-all cleanup to executive summary');
            }

            // Use structured summary if successful (check for error message)
            if ($enhanced_exec_summary && $enhanced_exec_summary !== '<p>Executive summary could not be generated at this time.</p>') {
                $exec_summary = $enhanced_exec_summary;
                $this->log_trace($runid, 'synthesis', '[M2.1] Using structured HTML executive summary');
            } else {
                $this->log_trace($runid, 'synthesis', '[M2.1] Structured summary failed, using template-based fallback');
            }

            // Step 6: Assemble Markdown report
            $markdown = $this->assemble_markdown_report(
                $metadata,
                $exec_summary,
                $sections,
                $citation_mgr
            );

            $payload_size = strlen($markdown);
            $citation_count = count($citation_mgr->get_all_citations());

            // Step 7: Calculate QA scores
            $qa_scores = $this->calculate_qa_scores(
                $sections,
                ['nb' => $nb_data],
                1.0,
                1.0
            );

            // Step 7.1: Extract all unique citations from canonical nb_data (moved up for QA metrics)
            $all_citations = [];
            $citation_map = [];
            $citation_id = 1;

            if (!empty($nb_data)) {
                foreach ($nb_data as $nb_code => $nb_content) {
                    $nb_citations = $nb_content['citations'] ?? [];
                    foreach ($nb_citations as $citation) {
                        $url = is_array($citation) ? ($citation['url'] ?? '') : $citation;
                        if ($url && !isset($citation_map[$url])) {
                            $citation_map[$url] = true;
                            $all_citations[] = [
                                'id' => $citation_id,
                                'url' => $url,
                                'title' => is_array($citation) ? ($citation['title'] ?? 'Source ' . $citation_id) : 'Source ' . $citation_id
                            ];
                            $citation_id++;
                        }
                    }
                }
            }

            // Step 7.2: Calculate basic QA metrics
            // Prepare all sections text for analysis
            $all_sections_text = '';
            foreach ($sections as $section) {
                $all_sections_text .= $section['content'] . "\n\n";
            }

            // Calculate individual scores
            $evidence_score = $this->calculate_evidence_strength_score($all_sections_text, $all_citations);
            // Extract just the content strings from sections array
            $section_contents = array_map(function($section) {
                return $section['content'];
            }, $sections);
            $completeness_score = $this->calculate_completeness_score($section_contents);
            $readability_score = $this->calculate_readability_score($all_sections_text);
            $citation_validation = $this->validate_citation_density(['nb_data' => $nb_data]);

            // Initialize telemetry logger for QA metrics
            $telemetry = new \local_customerintel\services\telemetry_logger();

            // Log QA metrics to telemetry
            $telemetry->log_metric($runid, 'qa_evidence_strength', $evidence_score);
            $telemetry->log_metric($runid, 'qa_completeness', $completeness_score);
            $telemetry->log_metric($runid, 'qa_readability', $readability_score);
            $telemetry->log_metric($runid, 'qa_citation_density_avg', $citation_validation['average']);
            $telemetry->log_metric($runid, 'qa_citation_density_total', $citation_validation['total']);

            // Calculate overall weighted score
            $overall_qa = (
                $evidence_score * 0.30 +
                $completeness_score * 0.25 +
                $readability_score * 0.25 +
                ($citation_validation['meets_target'] ? 0.20 : 0.10)
            );

            $telemetry->log_metric($runid, 'qa_overall_score', round($overall_qa, 2));

            error_log("[QA-SCORES] Run $runid | Evidence: $evidence_score | Complete: $completeness_score | Read: $readability_score | Overall: $overall_qa");
            error_log("[SYNTHESIS-COMPOSER] Extracted " . count($all_citations) . " unique citations from canonical nb_data");

            // Count actual citation references in the markdown text
            // This matches what's displayed to the user (e.g., [1], [2], [3], etc.)
            preg_match_all('/\[(\d+)\]/', $markdown, $citation_matches);
            $unique_citations = array_unique($citation_matches[1]);
            $citation_count = count($unique_citations);

            error_log("[SYNTHESIS-COMPOSER] Citations in nb_data: " . count($all_citations));
            error_log("[SYNTHESIS-COMPOSER] Citations referenced in markdown: {$citation_count}");
            error_log("[SYNTHESIS-COMPOSER] Unreferenced citations: " . (count($all_citations) - $citation_count));

            // M1 Task 3: Enhance metadata with complete provenance and cache validation
            $metadata = $this->enhance_metadata_with_m1t3_fields($metadata, $runid, $section_count);

            // Step 8: Save as synthesis_final_bundle artifact
            $bundle_data = [
                'final_report' => $markdown,
                'executive_summary' => $exec_summary,  // M2 Phase 2: Store enhanced executive summary
                'sections' => $sections,               // M3 Task 3.3: Store sections with formatted_html
                'qa_scores' => $qa_scores,
                'section_count' => $section_count,
                'citation_count' => $citation_count,
                'citations' => $all_citations,
                'metadata' => $metadata,
                'generation_timestamp' => time()
            ];

            $artifact_id = $DB->insert_record('local_ci_artifact', [
                'runid' => $runid,
                'artifacttype' => 'synthesis_final_bundle',
                'phase' => 'synthesis',
                'jsondata' => json_encode($bundle_data),
                'payload_size' => $payload_size,
                'timecreated' => time()
            ]);

            // Step 9: Log telemetry
            $this->log_trace($runid, 'synthesis', 'Synthesis composer completed', [
                'artifact_id' => $artifact_id,
                'sections' => $section_count,
                'citations' => $citation_count,
                'payload_size' => $payload_size,
                'qa_score' => $this->get_or($qa_scores, 'overall', 0)
            ]);

            $this->end_phase_timer($runid, 'synthesis_composition', 'success',
                "Generated {$section_count} sections with {$citation_count} citations", []);

            // M2 Task 0.1: Set status to 'completed' after synthesis finishes
            $DB->update_record('local_ci_run', (object)[
                'id' => $runid,
                'status' => 'completed',
                'timecompleted' => time(),
                'timemodified' => time()
            ]);

            $this->log_trace($runid, 'synthesis', 'Synthesis complete - status set to completed', [
                'sections' => $section_count,
                'citations' => $citation_count
            ]);

            return true;

        } catch (\Exception $e) {
            $this->end_phase_timer($runid, 'synthesis_composition', 'error',
                $e->getMessage(), ['exception' => get_class($e)]);

            $this->log_trace($runid, 'synthesis', 'Synthesis composer failed', [
                'error' => $e->getMessage(),
                'trace' => $e->getTraceAsString()
            ]);

            // Log to diagnostics
            $DB->insert_record('local_ci_diagnostics', [
                'runid' => $runid,
                'metric' => 'synthesis_composition_error',
                'severity' => 'error',
                'message' => $e->getMessage(),
                'timecreated' => time()
            ]);

            return false;
        }
    }

    /**
     * Draft section content for a Neural Block
     *
     * @param string $nb_code NB code (e.g., 'NB-1')
     * @param array $nb_record NB record data
     * @param string $section_title Section title
     * @param array $metadata Run metadata
     * @param CitationManager $citation_mgr Citation manager
     * @param array $patterns Detected patterns
     * @param array $inputs Executive inputs
     * @return string Section content (AI-generated narrative)
     */
    private function draft_section_for_nb($nb_code, $nb_record, $section_title, $metadata, $citation_mgr, $patterns, $inputs) {

        // ALWAYS use AI synthesis for consistent Gold Standard quality
        // No more special cases - all sections get professional AI-generated narrative
        return $this->synthesize_section_from_nb($nb_record, $section_title, $metadata, $citation_mgr);
    }

    /**
     * Synthesize section narrative from NB data using OpenAI
     *
     * @param array $nb_record NB record with data, citations, status
     * @param string $section_title Section title for context
     * @param array $metadata Run metadata
     * @param CitationManager $citation_mgr Citation manager
     * @return string Section narrative
     */
    private function synthesize_section_from_nb($nb_record, $section_title, $metadata, $citation_mgr) {

        $runid = $metadata['runid'] ?? 0;

        try {
            // Step 1: Get Gold Standard example for this section
            $gold_standard_example = $this->get_gold_standard_example($section_title);

            if (empty($gold_standard_example)) {
                error_log("[SYNTHESIS-AI] No Gold Standard example for {$section_title}");
            }

            // Step 2: Build synthesis prompt
            $prompt = $this->build_synthesis_prompt(
                $section_title,
                $nb_record,
                $metadata,
                $gold_standard_example
            );

            // Step 3: Call OpenAI to generate narrative
            $this->log_trace($runid, 'synthesis', "Generating AI narrative for: {$section_title}");
            $start_time = microtime(true);

            $narrative = $this->call_openai_for_synthesis($prompt, 1500);

            // LAYER 2: POST-PROCESSING CLEANUP (after OpenAI response)
            $before_count = substr_count($narrative, '...');
            error_log("[ELLIPSIS-DEBUG] Section: $section_title | Before: $before_count triple-dots");

            // Apply robust 3-layer ellipses cleaning
            $narrative = $this->clean_ellipses_and_truncations($narrative);

            $after_count = substr_count($narrative, '...');
            error_log("[ELLIPSIS-DEBUG] Section: $section_title | After: $after_count triple-dots | Removed: " . ($before_count - $after_count));

            $duration = round((microtime(true) - $start_time) * 1000);

            // Step 4: Validate generated content
            if (empty($narrative)) {
                error_log("[SYNTHESIS-AI] Empty narrative generated for {$section_title}");
                throw new \Exception("Empty narrative generated");
            }

            if (strlen($narrative) < 100) {
                error_log("[SYNTHESIS-AI] Generated narrative too short for {$section_title} (length: " . strlen($narrative) . ")");
                throw new \Exception("Generated narrative too short");
            }

            // Check for incomplete sentences (ellipses)
            if (substr_count($narrative, '...') > 2) {
                error_log("[SYNTHESIS-AI] Generated narrative has too many ellipses for {$section_title}");
                // Don't throw - just log warning
            }

            // Step 5: Add citations to citation manager
            $citations = $this->as_array($this->get_or($nb_record, 'citations', []));
            $citations_added = 0;

            foreach ($citations as $citation) {
                $citation_url = '';
                $citation_title = 'Source';

                // Handle different citation formats
                if (is_string($citation)) {
                    $citation_url = $citation;
                } elseif (is_array($citation)) {
                    $citation_url = $citation['url'] ?? '';
                    $citation_title = $citation['title'] ?? 'Source';

                    // Fallback: if url not found, try first element
                    if (empty($citation_url) && isset($citation[0])) {
                        $citation_url = $citation[0];
                    }
                }

                // Only add if we have a valid URL string
                if (!empty($citation_url) && is_string($citation_url)) {
                    try {
                        $citation_mgr->add_citation([
                            'url' => trim($citation_url),
                            'title' => $citation_title
                        ]);
                        $citations_added++;
                    } catch (\Exception $e) {
                        error_log("[SYNTHESIS-AI] Failed to add citation: " . $e->getMessage());
                        // Continue with other citations
                    }
                }
            }

            $this->log_trace($runid, 'synthesis', "AI narrative generated for: {$section_title}", [
                'length' => strlen($narrative),
                'citations_added' => $citations_added,
                'duration_ms' => $duration
            ]);

            error_log("[SYNTHESIS-AI] ‚úì {$section_title} completed in {$duration}ms, {$citations_added} citations");

            return $narrative;

        } catch (\Exception $e) {
            error_log("[SYNTHESIS-AI] Failed to generate narrative for {$section_title}: " . $e->getMessage());

            // Fallback to enriched template
            $this->log_trace($runid, 'synthesis', "Using fallback for {$section_title} due to AI error");

            return $this->generate_enriched_fallback($section_title, $nb_record['nbcode'] ?? '', $metadata);
        }
    }

    /**
     * Call OpenAI API for synthesis
     *
     * @param string $prompt Synthesis prompt
     * @param int $max_tokens Maximum tokens to generate
     * @return string Generated narrative
     */
    private function call_openai_for_synthesis($prompt, $max_tokens = 1500) {
        return $this->synthesis_engine->call_openai_for_synthesis($prompt, $max_tokens);
    }

    /**
     * Build synthesis prompt for AI
     *
     * @param string $section_title Section title
     * @param array $nb_record NB record data
     * @param array $metadata Run metadata
     * @param string $gold_standard_example Gold standard example
     * @return string Synthesis prompt
     */
    private function build_synthesis_prompt($section_title, $nb_record, $metadata, $gold_standard_example) {
        return $this->synthesis_engine->build_synthesis_prompt($section_title, $nb_record, $metadata, $gold_standard_example);
    }

    /**
     * Get Gold Standard example for section
     *
     * @param string $section_title Section title
     * @return string Gold standard example
     */
    private function get_gold_standard_example($section_title) {
        return $this->synthesis_engine->get_gold_standard_example($section_title);
    }

    /**
     * Apply voice enforcement to text
     *
     * @param string $text Input text
     * @return string Voice-enforced text
     */
    private function apply_voice_to_text($text) {
        return $this->synthesis_engine->apply_voice_to_text($text);
    }

    /**
     * Remove voice artifacts from text
     *
     * @param string $text Input text
     * @return string Cleaned text
     */
    private function remove_voice_artifacts($text) {
        return $this->synthesis_engine->remove_voice_artifacts($text);
    }

    /**
     * Clean ellipses and truncations from text
     *
     * @param string $text Input text
     * @return string Cleaned text
     */
    private function clean_ellipses_and_truncations($text) {
        return $this->synthesis_engine->clean_ellipses_and_truncations($text);
    }

    /**
     * Assemble markdown report
     *
     * @param array $metadata Run metadata
     * @param string $exec_summary Executive summary
     * @param array $sections Report sections
     * @param CitationManager $citation_mgr Citation manager
     * @return string Markdown report
     */
    private function assemble_markdown_report($metadata, $exec_summary, $sections, $citation_mgr) {
        return $this->synthesis_engine->assemble_markdown_report($metadata, $exec_summary, $sections, $citation_mgr);
    }

    /**
     * Calculate QA scores
     *
     * @param array $sections Report sections
     * @param array $inputs Input data
     * @param float $pattern_weight Pattern weight
     * @param float $coherence_weight Coherence weight
     * @return array QA scores
     */
    private function calculate_qa_scores($sections, $inputs, $pattern_weight, $coherence_weight) {
        return $this->synthesis_engine->calculate_qa_scores($sections, $inputs, $pattern_weight, $coherence_weight);
    }

    /**
     * Calculate evidence strength score
     *
     * @param string $text Report text
     * @param array $citations Citations
     * @return float Evidence score
     */
    private function calculate_evidence_strength_score($text, $citations) {
        return $this->synthesis_engine->calculate_evidence_strength_score($text, $citations);
    }

    /**
     * Calculate completeness score
     *
     * @param array $section_contents Section contents
     * @return float Completeness score
     */
    private function calculate_completeness_score($section_contents) {
        return $this->synthesis_engine->calculate_completeness_score($section_contents);
    }

    /**
     * Calculate readability score
     *
     * @param string $text Report text
     * @return float Readability score
     */
    private function calculate_readability_score($text) {
        return $this->synthesis_engine->calculate_readability_score($text);
    }

    /**
     * Validate citation density
     *
     * @param array $data Input data
     * @return array Citation validation results
     */
    private function validate_citation_density($data) {
        return $this->synthesis_engine->validate_citation_density($data);
    }

    /**
     * Enhance metadata with M1T3 fields
     *
     * @param array $metadata Current metadata
     * @param int $runid Run ID
     * @param int $section_count Section count
     * @return array Enhanced metadata
     */
    private function enhance_metadata_with_m1t3_fields($metadata, $runid, $section_count) {
        return $this->synthesis_engine->enhance_metadata_with_m1t3_fields($metadata, $runid, $section_count);
    }

    /**
     * Generate enriched fallback content
     *
     * @param string $section_title Section title
     * @param string $nb_code NB code
     * @param array $metadata Run metadata
     * @return string Fallback content
     */
    private function generate_enriched_fallback($section_title, $nb_code, $metadata) {
        return $this->synthesis_engine->generate_enriched_fallback($section_title, $nb_code, $metadata);
    }

    /**
     * Detect patterns in inputs
     *
     * @param array $inputs Input data
     * @return array Detected patterns
     */
    private function detect_patterns($inputs) {
        return $this->synthesis_engine->detect_patterns($inputs);
    }

    /**
     * Draft executive insight
     *
     * @param array $inputs Input data
     * @param array $patterns Detected patterns
     * @param CitationManager $citation_mgr Citation manager
     * @return array Executive insight result
     */
    private function draft_executive_insight($inputs, $patterns, $citation_mgr) {
        return $this->synthesis_engine->draft_executive_insight($inputs, $patterns, $citation_mgr);
    }

    /**
     * Log trace event
     *
     * @param int $runid Run ID
     * @param string $phase Phase name
     * @param string $message Trace message
     * @param array $context Additional context
     */
    private function log_trace($runid, $phase, $message, $context = []) {
        $this->synthesis_engine->log_trace($runid, $phase, $message, $context);
    }

    /**
     * Start phase timer
     *
     * @param int $runid Run ID
     * @param string $phase Phase name
     */
    private function start_phase_timer($runid, $phase) {
        $this->synthesis_engine->start_phase_timer($runid, $phase);
    }

    /**
     * End phase timer
     *
     * @param int $runid Run ID
     * @param string $phase Phase name
     * @param string $status Status (success/error)
     * @param string $message Status message
     * @param array $context Additional context
     */
    private function end_phase_timer($runid, $phase, $status, $message, $context) {
        $this->synthesis_engine->end_phase_timer($runid, $phase, $status, $message, $context);
    }

    /**
     * Utility: Ensure value is array
     *
     * @param mixed $v Value to convert
     * @return array Array value
     */
    private function as_array($v): array {
        return $this->synthesis_engine->as_array($v);
    }

    /**
     * Utility: Get value or default
     *
     * @param array $a Array
     * @param string $key Key to get
     * @param mixed $default Default value
     * @return mixed Value or default
     */
    private function get_or($a, string $key, $default = null) {
        return $this->synthesis_engine->get_or($a, $key, $default);
    }

    /**
     * Utility: Check if NB is placeholder
     *
     * @param array $nb_data NB data
     * @return bool True if placeholder
     */
    private function is_placeholder_nb(array $nb_data): bool {
        return $this->synthesis_engine->is_placeholder_nb($nb_data);
    }

    /**
     * M3.5: Generate CVS-style strategic opportunity brief for a single NB section
     *
     * Transforms raw section content into CVS-style 7-part opportunity brief using OpenAI GPT-4o.
     *
     * 7-part structure:
     * 1. What Is Happening
     * 2. Why This Matters Now
     * 3. Current Performance Gap (with metrics)
     * 4. What the Target Company Needs
     * 5. What the Source Company Offers
     * 6. Timeline & Urgency
     * 7. Executive Accountability
     *
     * @param string $nb_code NB code (NB1-NB15)
     * @param string $content Raw section content (plain text)
     * @param array $metadata Contains source_company_name, target_company_name, section_title
     * @param int $runid For logging
     * @return string|null Formatted CVS-style HTML or null if formatting fails
     */
    private function generate_formatted_section($nb_code, $content, $metadata, $runid) {
        $this->log_trace($runid, 'synthesis', "[M3.5] Starting CVS-style section formatting for {$nb_code}");

        // Extract company names and section title
        $source_company_name = $metadata['source_company_name'] ?? 'Source Company';
        $target_company_name = $metadata['target_company_name'] ?? 'Target Company';
        $section_title = $metadata['section_title'] ?? 'Section';

        // INSIGHT CLUSTERS FORMAT: All 15 sections use custom Insight Clusters prompts
        // Each section has a tailored prompt in the switch statement below
        $this->log_trace($runid, 'synthesis', "[Insight Clusters] Generating {$nb_code} with Insight Clusters format");

        // Base context (shared across all sections)
        $base_context = "You are an executive intelligence analyst producing strategic insight briefs for a B2B client.

CONTEXT:
- Source Company (reader employer): {$source_company_name}
- Target Company (the subject of the report): {$target_company_name}
- Section: {$section_title} ({$nb_code})
- Relationship Type: Prospective alliance or strategic partnership
- Audience: Senior executives at the source company
- Purpose: Identify strategic opportunities, risks, or insight areas to advance partnership and value creation
- Tone: Authoritative, analytical, evidence-backed, executive-ready

DATA AVAILABLE FOR THIS SECTION:
{$content}";

        // Section-specific Insight Clusters prompts (each section has complete formatting instructions)
