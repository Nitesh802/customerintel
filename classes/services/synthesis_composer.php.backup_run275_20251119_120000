            default:
                // Should never reach here - all 15 sections are explicitly handled
                $this->log_trace($runid, 'synthesis', "[M3.5 Phase 3] Unknown section {$nb_code} - this should not happen");
                return null;
        }

        // Combine prompt components (each section's task_instruction has complete formatting requirements)
        $prompt = $base_context . "\n\n" . $task_instruction;

        try {
            // Call OpenAI API (using synthesis_engine's method)
            $api_key = get_config('local_customerintel', 'openaiapikey');
            if (empty($api_key)) {
                throw new \Exception('OpenAI API key not configured');
            }

            $ch = curl_init('https://api.openai.com/v1/chat/completions');
            curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);
            curl_setopt($ch, CURLOPT_POST, true);
            curl_setopt($ch, CURLOPT_HTTPHEADER, [
                'Content-Type: application/json',
                'Authorization: Bearer ' . $api_key
            ]);
            curl_setopt($ch, CURLOPT_POSTFIELDS, json_encode([
                'model' => 'gpt-4o',
                'messages' => [
                    [
                        'role' => 'system',
                        'content' => 'You are an executive intelligence analyst producing strategic opportunity briefs for B2B partnerships. You write in an authoritative, analytical, evidence-backed style. You quantify performance gaps with specific metrics and tie opportunities to executive accountability and urgency.'
                    ],
                    [
                        'role' => 'user',
                        'content' => $prompt
                    ]
                ],
                'temperature' => 0.7,
                'max_tokens' => 1500
            ]));

            $response = curl_exec($ch);
            $http_code = curl_getinfo($ch, CURLINFO_HTTP_CODE);
            curl_close($ch);

            if ($http_code !== 200) {
                throw new \Exception("OpenAI API returned HTTP {$http_code}");
            }

            $data = json_decode($response, true);
            if (json_last_error() !== JSON_ERROR_NONE) {
                throw new \Exception('Invalid JSON response from OpenAI');
            }

            if (!isset($data['choices'][0]['message']['content'])) {
                throw new \Exception('Invalid OpenAI response structure');
            }

            $formatted_html = trim($data['choices'][0]['message']['content']);

            // Clean markdown artifacts
            $formatted_html = preg_replace('/```html\s*/i', '', $formatted_html);
            $formatted_html = preg_replace('/```\s*$/i', '', $formatted_html);
            $formatted_html = trim($formatted_html);

            // M3: Apply three-layer cleanup for stray periods (following M2.1 pattern)
            $formatted_html = str_replace('<p>.</p>', '', $formatted_html);
            $formatted_html = preg_replace('/<p[^>]*>\s*\.\s*<\/p>/i', '', $formatted_html);
            $formatted_html = preg_replace('/>\s*\.\s*<hr/i', '><hr', $formatted_html);
            $formatted_html = trim($formatted_html);

            // Validate HTML structure
            if (!$this->validate_section_html($formatted_html, $nb_code, $runid)) {
                throw new \Exception('HTML validation failed');
            }

            $this->log_trace($runid, 'synthesis', "[M3.5 Phase 2] Successfully generated V3 format for {$nb_code}");
            return $formatted_html;

        } catch (\Exception $e) {
            $this->log_trace($runid, 'synthesis', "[M3.5 Phase 2] Error generating {$nb_code}: " . $e->getMessage());
            error_log("[M3.5 Phase 2] Run {$runid} section {$nb_code} formatting failed: " . $e->getMessage());
            return null; // Graceful fallback - don't break pipeline
        }
    }

    /**
     * M3 Task 3.1: Validate HTML structure for formatted section
     *
     * Ensures:
     * - All tags properly closed
     * - Only allowed CSS classes used (highlight, fact-grid, fact)
     * - Max 1 highlight, 1 fact-grid, 1 bullet list per section
     * - No dangerous HTML (script, iframe, javascript, etc.)
     *
     * @param string $html HTML to validate
     * @param string $nb_code NB code for logging
     * @param int $runid Run ID for logging
     * @return bool True if valid, false otherwise
     */
    private function validate_section_html($html, $nb_code, $runid) {
        // Check for dangerous tags/attributes
        $dangerous = ['<script', '<iframe', '<object', 'javascript:', 'onclick=', 'onerror=', 'onload='];
        foreach ($dangerous as $tag) {
            if (stripos($html, $tag) !== false) {
                $this->log_trace($runid, 'synthesis', "[M3] Section {$nb_code} validation failed: Dangerous HTML detected ({$tag})");
                return false;
            }
        }

        // Check tag closure (basic validation)
        $tag_pairs = [
            ['<div', '</div>'],
            ['<p>', '</p>'],
            ['<ul', '</ul>'],
            ['<li>', '</li>'],
            ['<strong>', '</strong>']
        ];

        foreach ($tag_pairs as list($open, $close)) {
            $open_count = substr_count($html, $open);
            $close_count = substr_count($html, $close);
            if ($open_count !== $close_count) {
                $this->log_trace($runid, 'synthesis', "[M3] Section {$nb_code} validation failed: Unclosed {$open} tags (open: {$open_count}, close: {$close_count})");
                return false;
            }
        }

        // CSS class and component constraint validation disabled for Insight Clusters format
        // Insight Clusters format uses:
        // - Multiple <ul> lists (one per cluster) - so no limit on lists
        // - Semantic HTML only (<p>, <b>, <ul>, <li>) - no CSS classes required
        // - No highlight/fact-grid classes from old format

        $this->log_trace($runid, 'synthesis', "[M3] Section {$nb_code} validation passed");
        return true;
    }
}
