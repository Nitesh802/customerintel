{
  "type": "object",
  "required": ["executive_summary", "pressure_factors", "commitments", "key_metrics", "citations"],
  "properties": {
    "executive_summary": {
      "type": "string",
      "minLength": 100,
      "description": "Executive-level summary of pressure profile"
    },
    "pressure_factors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["factor", "severity", "timeline", "description"],
        "properties": {
          "factor": {"type": "string"},
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "timeline": {"type": "string"},
          "description": {"type": "string"},
          "source": {"type": "string"}
        }
      }
    },
    "commitments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["commitment", "deadline", "status"],
        "properties": {
          "commitment": {"type": "string"},
          "deadline": {"type": "string"},
          "status": {
            "type": "string",
            "enum": ["on-track", "at-risk", "delayed", "completed"]
          },
          "stakeholder": {"type": "string"}
        }
      }
    },
    "key_metrics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["metric", "value", "trend"],
        "properties": {
          "metric": {"type": "string"},
          "value": {"type": "string"},
          "trend": {
            "type": "string",
            "enum": ["improving", "stable", "declining", "volatile"]
          },
          "target": {"type": "string"},
          "period": {"type": "string"}
        }
      }
    },
    "quotes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["quote", "source"],
        "properties": {
          "quote": {"type": "string"},
          "source": {"type": "string"},
          "context": {"type": "string"}
        }
      }
    },
    "citations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["source_id"],
        "properties": {
          "source_id": {"type": "integer"},
          "quote": {"type": "string"},
          "page": {"type": "string"},
          "url": {"type": "string"}
        }
      }
    }
  }
}