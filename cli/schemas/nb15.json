{
  "type": "object",
  "required": ["inflection_analysis", "strategic_options", "scenario_planning", "decision_framework", "citations"],
  "properties": {
    "inflection_analysis": {
      "type": "object",
      "required": ["current_position", "inflection_indicators", "timing_assessment"],
      "properties": {
        "current_position": {
          "type": "object",
          "required": ["business_lifecycle_stage", "market_dynamics", "competitive_position"],
          "properties": {
            "business_lifecycle_stage": {
              "type": "string",
              "enum": ["startup", "growth", "maturity", "decline", "transformation", "turnaround"]
            },
            "market_dynamics": {
              "type": "object",
              "required": ["market_stage", "growth_trajectory", "disruption_level"],
              "properties": {
                "market_stage": {
                  "type": "string",
                  "enum": ["emerging", "growing", "mature", "declining", "transforming"]
                },
                "growth_trajectory": {
                  "type": "string",
                  "enum": ["accelerating", "stable", "slowing", "negative"]
                },
                "disruption_level": {
                  "type": "string",
                  "enum": ["high", "moderate", "low", "minimal"]
                }
              }
            },
            "competitive_position": {
              "type": "string",
              "enum": ["dominant", "strong", "competitive", "weak", "vulnerable"]
            }
          }
        },
        "inflection_indicators": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["indicator", "category", "signal_strength", "time_sensitivity"],
            "properties": {
              "indicator": {"type": "string"},
              "category": {
                "type": "string",
                "enum": ["technological", "regulatory", "competitive", "customer", "economic", "social", "environmental"]
              },
              "signal_strength": {
                "type": "string",
                "enum": ["strong", "moderate", "weak", "emerging"]
              },
              "time_sensitivity": {
                "type": "string",
                "enum": ["immediate", "near_term", "medium_term", "long_term"]
              },
              "impact_potential": {
                "type": "string",
                "enum": ["transformational", "significant", "moderate", "minimal"]
              }
            }
          }
        },
        "timing_assessment": {
          "type": "object",
          "required": ["inflection_proximity", "window_of_opportunity", "urgency_level"],
          "properties": {
            "inflection_proximity": {
              "type": "string",
              "enum": ["at_inflection_point", "approaching", "distant", "uncertain"]
            },
            "window_of_opportunity": {
              "type": "string",
              "enum": ["closing_rapidly", "open_but_narrowing", "stable", "expanding"]
            },
            "urgency_level": {
              "type": "string",
              "enum": ["critical", "high", "medium", "low"]
            },
            "decision_timeline": {"type": "string"}
          }
        }
      }
    },
    "strategic_options": {
      "type": "object",
      "required": ["option_analysis", "strategic_pathways", "resource_implications"],
      "properties": {
        "option_analysis": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["option", "feasibility", "risk_level", "potential_return"],
            "properties": {
              "option": {"type": "string"},
              "description": {"type": "string"},
              "feasibility": {
                "type": "string",
                "enum": ["high", "medium", "low", "very_low"]
              },
              "risk_level": {
                "type": "string",
                "enum": ["very_high", "high", "medium", "low", "very_low"]
              },
              "potential_return": {
                "type": "string",
                "enum": ["very_high", "high", "medium", "low", "very_low"]
              },
              "timeline": {"type": "string"},
              "prerequisites": {
                "type": "array",
                "items": {"type": "string"}
              }
            }
          }
        },
        "strategic_pathways": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["pathway", "description", "key_milestones"],
            "properties": {
              "pathway": {"type": "string"},
              "description": {"type": "string"},
              "key_milestones": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["milestone", "timeline"],
                  "properties": {
                    "milestone": {"type": "string"},
                    "timeline": {"type": "string"},
                    "success_criteria": {"type": "string"}
                  }
                }
              },
              "exit_criteria": {
                "type": "array",
                "items": {"type": "string"}
              }
            }
          }
        },
        "resource_implications": {
          "type": "object",
          "required": ["investment_requirements", "capability_gaps", "opportunity_costs"],
          "properties": {
            "investment_requirements": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["category", "magnitude", "timing"],
                "properties": {
                  "category": {"type": "string"},
                  "magnitude": {
                    "type": "string",
                    "enum": ["very_high", "high", "moderate", "low", "minimal"]
                  },
                  "timing": {"type": "string"},
                  "certainty": {
                    "type": "string",
                    "enum": ["high", "medium", "low"]
                  }
                }
              }
            },
            "capability_gaps": {
              "type": "array",
              "items": {"type": "string"}
            },
            "opportunity_costs": {
              "type": "array",
              "items": {"type": "string"}
            }
          }
        }
      }
    },
    "scenario_planning": {
      "type": "object",
      "required": ["key_scenarios", "probability_assessment", "impact_analysis"],
      "properties": {
        "key_scenarios": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "object",
            "required": ["scenario", "description", "key_assumptions"],
            "properties": {
              "scenario": {"type": "string"},
              "description": {"type": "string"},
              "key_assumptions": {
                "type": "array",
                "items": {"type": "string"}
              },
              "probability": {
                "type": "string",
                "enum": ["very_high", "high", "medium", "low", "very_low"]
              },
              "time_horizon": {"type": "string"}
            }
          }
        },
        "probability_assessment": {
          "type": "object",
          "required": ["most_likely_scenario", "alternative_scenarios", "wild_cards"],
          "properties": {
            "most_likely_scenario": {"type": "string"},
            "alternative_scenarios": {
              "type": "array",
              "items": {"type": "string"}
            },
            "wild_cards": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["event", "impact"],
                "properties": {
                  "event": {"type": "string"},
                  "impact": {"type": "string"},
                  "probability": {"type": "string"}
                }
              }
            }
          }
        },
        "impact_analysis": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["scenario", "business_impact", "strategic_implications"],
            "properties": {
              "scenario": {"type": "string"},
              "business_impact": {
                "type": "object",
                "required": ["financial", "operational", "competitive"],
                "properties": {
                  "financial": {"type": "string"},
                  "operational": {"type": "string"},
                  "competitive": {"type": "string"}
                }
              },
              "strategic_implications": {
                "type": "array",
                "items": {"type": "string"}
              },
              "required_actions": {
                "type": "array",
                "items": {"type": "string"}
              }
            }
          }
        }
      }
    },
    "decision_framework": {
      "type": "object",
      "required": ["decision_criteria", "evaluation_matrix", "recommendation"],
      "properties": {
        "decision_criteria": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["criterion", "weight", "rationale"],
            "properties": {
              "criterion": {"type": "string"},
              "weight": {
                "type": "string",
                "enum": ["critical", "very_important", "important", "moderate", "minor"]
              },
              "rationale": {"type": "string"},
              "measurement": {"type": "string"}
            }
          }
        },
        "evaluation_matrix": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["option", "scores", "total_score"],
            "properties": {
              "option": {"type": "string"},
              "scores": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["criterion", "score", "rationale"],
                  "properties": {
                    "criterion": {"type": "string"},
                    "score": {"type": "number"},
                    "rationale": {"type": "string"}
                  }
                }
              },
              "total_score": {"type": "number"},
              "qualitative_assessment": {"type": "string"}
            }
          }
        },
        "recommendation": {
          "type": "object",
          "required": ["preferred_option", "rationale", "implementation_approach"],
          "properties": {
            "preferred_option": {"type": "string"},
            "rationale": {"type": "string"},
            "implementation_approach": {"type": "string"},
            "success_metrics": {
              "type": "array",
              "items": {"type": "string"}
            },
            "risk_mitigation": {
              "type": "array",
              "items": {"type": "string"}
            },
            "contingency_plans": {
              "type": "array",
              "items": {"type": "string"}
            }
          }
        }
      }
    },
    "strategic_implications": {
      "type": "object",
      "properties": {
        "organizational_changes": {
          "type": "array",
          "items": {"type": "string"}
        },
        "stakeholder_impact": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["stakeholder", "impact"],
            "properties": {
              "stakeholder": {"type": "string"},
              "impact": {"type": "string"},
              "management_approach": {"type": "string"}
            }
          }
        },
        "long_term_positioning": {"type": "string"}
      }
    },
    "citations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["source_id"],
        "properties": {
          "source_id": {"type": "integer"},
          "quote": {"type": "string"},
          "page": {"type": "string"},
          "url": {"type": "string"}
        }
      }
    }
  }
}