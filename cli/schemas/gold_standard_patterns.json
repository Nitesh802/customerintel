{
    "version": "1.0.0",
    "description": "Gold Standard Exemplar Patterns for Customer Intelligence Synthesis",
    "qa_targets": {
        "structure": 0.85,
        "tone": 0.90,
        "quantification": 0.80,
        "voice": 0.85,
        "logical_flow": 0.90
    },
    "sections": {
        "executive_insight": {
            "exemplar": {
                "structure": {
                    "opening": "Strategic assessment with company name",
                    "body": "3-4 key insights with supporting metrics",
                    "closing": "Forward-looking statement with timeline"
                },
                "tone": "Executive-level, strategic, decisive",
                "voice": {
                    "person": "third",
                    "tense": "present",
                    "style": "direct"
                },
                "quantification": {
                    "metrics_required": 3,
                    "patterns": ["percentage", "dollar_amount", "timeframe"]
                },
                "logical_flow": [
                    "current_state",
                    "challenge_identification",
                    "opportunity_framing",
                    "action_imperative"
                ],
                "word_count": {
                    "min": 100,
                    "max": 150
                }
            },
            "quality_markers": [
                "Contains company name in first sentence",
                "Includes at least 3 quantified metrics",
                "References specific timeline (Q1/Q2/18-month)",
                "Uses action-oriented verbs",
                "Avoids passive voice"
            ],
            "anti_patterns": [
                "Generic statements without specifics",
                "Excessive use of 'may', 'might', 'could'",
                "Consultant jargon",
                "Run-on sentences exceeding 25 words"
            ]
        },
        "customer_fundamentals": {
            "exemplar": {
                "structure": {
                    "opening": "Customer segment overview",
                    "body": "Retention, acquisition, and satisfaction metrics",
                    "closing": "Key customer insight"
                },
                "tone": "Analytical, data-driven, customer-centric",
                "voice": {
                    "person": "third",
                    "tense": "present",
                    "style": "analytical"
                },
                "quantification": {
                    "metrics_required": 4,
                    "patterns": ["retention_rate", "nps_score", "cac", "ltv"]
                },
                "logical_flow": [
                    "segment_definition",
                    "behavior_patterns",
                    "value_drivers",
                    "improvement_areas"
                ]
            },
            "quality_markers": [
                "Specific customer segments identified",
                "Retention metrics quantified",
                "CAC/LTV ratios included",
                "Customer pain points articulated",
                "Growth opportunities highlighted"
            ]
        },
