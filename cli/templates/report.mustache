{{!
    Customer Intelligence Report Template
    Maps TSX structure to NB results with expand/collapse and citations
}}

<div class="local-customerintel-report" data-report-id="{{reportid}}">
    {{! Header with company info and controls }}
    <div class="report-header bg-white rounded-lg shadow-md p-6 mb-6">
        <div class="flex items-start justify-between mb-4">
            <div class="flex-1">
                <h1 class="text-3xl font-bold text-gray-900 mb-2">
                    Customer Intelligence Report
                </h1>
                <p class="text-lg text-gray-600">
                    {{customercompany}} - {{targetcompany}}
                </p>
            </div>
            <div class="text-right">
                <span class="text-sm text-gray-500">Report Date: {{reportdate}}</span>
            </div>
        </div>

        {{! Version selector and controls }}
        <div class="report-controls flex gap-3 items-center">
            {{#version_history}}
            <div class="version-selector">
                <label class="text-sm font-medium text-gray-700 mr-2">Version:</label>
                <select id="version-selector" class="form-select rounded-md border-gray-300">
                    <option value="">Current Version</option>
                    {{#version_history}}
                    <option value="{{snapshot_id}}" {{#selected}}selected{{/selected}}>
                        {{created_formatted}} - {{mode}} (Run #{{run_id}})
                    </option>
                    {{/version_history}}
                </select>
            </div>
            {{/version_history}}

            <label class="inline-flex items-center">
                <input type="checkbox" id="show-changes" class="form-checkbox rounded text-indigo-600" 
                       {{#showchanges}}checked{{/showchanges}}>
                <span class="ml-2 text-sm text-gray-700">Show Changes</span>
            </label>

            <button id="expand-all" class="btn btn-sm bg-gray-100 hover:bg-gray-200 px-3 py-1 rounded">
                Expand All
            </button>
            <button id="collapse-all" class="btn btn-sm bg-gray-100 hover:bg-gray-200 px-3 py-1 rounded">
                Collapse All
            </button>
        </div>

        {{! Progress meter }}
        <div class="progress-meter mt-4">
            <div class="flex justify-between text-sm text-gray-600 mb-2">
                <span>Progress: {{completed_items}} / {{total_items}}</span>
                <span>{{progress_percentage}}%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                <div class="bg-gradient-to-r from-indigo-600 to-purple-600 h-3 rounded-full transition-all duration-500"
                     style="width: {{progress_percentage}}%"></div>
            </div>
        </div>

        {{! Change summary when viewing diffs }}
        {{#change_summary}}
        <div class="change-summary mt-4 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
            <h3 class="font-semibold text-yellow-900 mb-2">Version Changes Summary</h3>
            <div class="flex gap-6 text-sm">
                <div>
                    <span class="text-gray-600">Total NBs Changed:</span>
                    <span class="font-semibold text-gray-900">{{total_nb_changes}}</span>
                </div>
                {{#changes_by_type}}
                <div>
                    <span class="text-green-700">Added:</span>
                    <span class="font-semibold">{{added}}</span>
                </div>
                <div>
                    <span class="text-blue-700">Modified:</span>
                    <span class="font-semibold">{{changed}}</span>
                </div>
                <div>
                    <span class="text-red-700">Removed:</span>
                    <span class="font-semibold">{{removed}}</span>
                </div>
                {{/changes_by_type}}
            </div>
            {{#affected_nbs}}
            <div class="mt-2 text-xs text-gray-600">
                Affected NBs: {{#affected_nbs}}{{.}} {{/affected_nbs}}
            </div>
            {{/affected_nbs}}
        </div>
        {{/change_summary}}
    </div>

    {{! Phase sections }}
    <div class="report-phases space-y-6">
        {{#phases}}
        <div class="phase-section bg-white rounded-lg shadow-md overflow-hidden" data-phase="{{phase_id}}">
            <div class="phase-header {{header_color}} text-white p-4 cursor-pointer flex items-center justify-between"
                 data-toggle="phase-{{phase_id}}">
                <div class="flex items-center gap-3">
                    <svg class="chevron-icon w-6 h-6 transition-transform {{#expanded}}rotate-90{{/expanded}}"
                         fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    <div>
                        <h2 class="text-xl font-bold">{{title}}</h2>
                        <p class="text-sm opacity-90">{{item_count}} items â€¢ {{time_estimate}}</p>
                    </div>
                </div>
            </div>

            <div class="phase-content {{^expanded}}hidden{{/expanded}}" id="phase-{{phase_id}}">
                <div class="p-6 space-y-6">
                    {{#items}}
                    <div class="item-block border-2 border-gray-200 rounded-lg p-5 hover:border-indigo-300 transition-all
                                {{#has_diff}}{{diff_class}}{{/has_diff}}" data-item-id="{{item_id}}">
                        <div class="item-header mb-4">
                            <h3 class="text-lg font-bold text-gray-900">{{title}}</h3>
                            {{#has_diff}}
                            <span class="diff-badge inline-block px-2 py-1 text-xs rounded-full {{diff_badge_class}}">
                                {{diff_label}}
                            </span>
                            {{/has_diff}}
                        </div>

                        {{#prompt}}
                        <div class="item-prompt bg-indigo-50 border border-indigo-200 rounded-lg p-4 mb-4">
                            <p class="text-sm text-gray-800 font-mono">{{prompt_text}}</p>
                        </div>
                        {{/prompt}}

                        <div class="item-response">
                            {{#has_response}}
                            <div class="response-content prose max-w-none">
                                {{{response_html}}}
                            </div>

                            {{#has_citations}}
                            <div class="citations-section mt-4">
                                <button class="citations-toggle flex items-center gap-2 text-sm text-indigo-600 hover:text-indigo-800"
                                        data-toggle="citations-{{item_id}}">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                              d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <span>{{citation_count}} Citation(s)</span>
                                    <svg class="chevron-icon w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </button>

                                <div class="citations-list hidden mt-3 pl-6 space-y-2" id="citations-{{item_id}}">
                                    {{#citations}}
                                    <div class="citation-item bg-gray-50 rounded p-3 text-sm">
                                        <div class="citation-title font-medium text-gray-900">
                                            {{#url}}
                                            <a href="{{url}}" target="_blank" class="text-indigo-600 hover:text-indigo-800">
                                                {{title}}
                                            </a>
                                            {{/url}}
                                            {{^url}}{{title}}{{/url}}
                                        </div>
                                        {{#quote}}
                                        <div class="citation-quote mt-2 text-gray-700 italic">
                                            "{{quote}}"
                                        </div>
                                        {{/quote}}
                                        {{#page}}
                                        <div class="citation-page text-xs text-gray-500 mt-1">
                                            Page: {{page}}
                                        </div>
                                        {{/page}}
                                    </div>
                                    {{/citations}}
                                </div>
                            </div>
                            {{/has_citations}}
                            {{/has_response}}

                            {{^has_response}}
                            <div class="no-response text-gray-500 italic">
                                No response captured for this item.
                            </div>
                            {{/has_response}}

                            {{#diff_details}}
                            <div class="diff-details hidden mt-4 p-4 bg-yellow-50 border border-yellow-200 rounded">
                                <div class="text-sm font-medium text-yellow-900 mb-2">Changes from previous version:</div>
                                {{#added_items}}
                                <div class="diff-item text-sm">
                                    <span class="text-green-700">+ Added:</span> {{.}}
                                </div>
                                {{/added_items}}
                                {{#removed_items}}
                                <div class="diff-item text-sm">
                                    <span class="text-red-700">- Removed:</span> {{.}}
                                </div>
                                {{/removed_items}}
                                {{#changed_items}}
                                <div class="diff-item text-sm">
                                    <span class="text-blue-700">~ Changed:</span> {{.}}
                                </div>
                                {{/changed_items}}
                            </div>
                            {{/diff_details}}
                        </div>
                    </div>
                    {{/items}}
                </div>
            </div>
        </div>
        {{/phases}}
    </div>

    {{! Export buttons }}
    <div class="report-actions mt-8 flex gap-3">
        <button id="export-markdown" class="btn bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700">
            <svg class="inline w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Export Markdown
        </button>
        <button id="export-notebook" class="btn bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700">
            <svg class="inline w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Export for NotebookLM
        </button>
    </div>
</div>

{{! Inline JavaScript for interactions }}
<script>
require(['jquery'], function($) {
    $(document).ready(function() {
        // Add active class if Show Changes is checked on load
        if ($('#show-changes').is(':checked')) {
            $('.local-customerintel-report').addClass('show-changes-active');
        }
        // Phase expand/collapse
        $('.phase-header').on('click', function() {
            var phaseId = $(this).data('toggle');
            var content = $('#' + phaseId);
            var chevron = $(this).find('.chevron-icon');
            
            content.slideToggle(300);
            chevron.toggleClass('rotate-90');
        });

        // Citations expand/collapse
        $('.citations-toggle').on('click', function(e) {
            e.preventDefault();
            var citationId = $(this).data('toggle');
            var citations = $('#' + citationId);
            var chevron = $(this).find('.chevron-icon');
            
            citations.slideToggle(200);
            chevron.toggleClass('rotate-90');
        });

        // Expand all
        $('#expand-all').on('click', function() {
            $('.phase-content').slideDown(300);
            $('.phase-header .chevron-icon').addClass('rotate-90');
        });

        // Collapse all
        $('#collapse-all').on('click', function() {
            $('.phase-content').slideUp(300);
            $('.phase-header .chevron-icon').removeClass('rotate-90');
        });

        // Version selector
        $('#version-selector').on('change', function() {
            var versionId = $(this).val();
            var currentUrl = new URL(window.location.href);
            
            if (versionId) {
                currentUrl.searchParams.set('versionid', versionId);
            } else {
                currentUrl.searchParams.delete('versionid');
            }
            
            // Preserve showchanges state
            if ($('#show-changes').is(':checked')) {
                currentUrl.searchParams.set('showchanges', '1');
            }
            
            window.location.href = currentUrl.toString();
        });

        // Show Changes toggle
        $('#show-changes').on('change', function() {
            var isChecked = $(this).is(':checked');
            var currentUrl = new URL(window.location.href);
            
            if (isChecked) {
                currentUrl.searchParams.set('showchanges', '1');
                // Show diff details
                $('.diff-details').slideDown(200);
                $('.item-block.diff-additions-only').addClass('border-green-300 bg-green-50');
                $('.item-block.diff-removals-only').addClass('border-red-300 bg-red-50');
                $('.item-block.diff-moderate-changes').addClass('border-blue-300 bg-blue-50');
                $('.item-block.diff-major-changes').addClass('border-yellow-300 bg-yellow-50');
            } else {
                currentUrl.searchParams.delete('showchanges');
                // Hide diff details
                $('.diff-details').slideUp(200);
                $('.item-block').removeClass('border-green-300 bg-green-50 border-red-300 bg-red-50 border-blue-300 bg-blue-50 border-yellow-300 bg-yellow-50');
            }
            
            window.location.href = currentUrl.toString();
        });

        // Export handlers
        $('#export-markdown').on('click', function() {
            var reportId = $('.local-customerintel-report').data('report-id');
            window.location.href = M.cfg.wwwroot + '/local/customerintel/export.php?id=' + reportId + '&format=markdown';
        });

        $('#export-notebook').on('click', function() {
            var reportId = $('.local-customerintel-report').data('report-id');
            window.location.href = M.cfg.wwwroot + '/local/customerintel/export.php?id=' + reportId + '&format=notebook';
        });
    });
});
</script>

