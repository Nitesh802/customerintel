<div class="local-customerintel-companies">
    {{! Navigation breadcrumb }}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{{dashboardurl}}}">{{#str}}pluginname, local_customerintel{{/str}}</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                {{#str}}managecompanies, local_customerintel{{/str}}
            </li>
        </ol>
    </nav>

    {{! Status messages }}
    {{#message}}
    <div class="alert alert-{{messagetype}} alert-dismissible fade show" role="alert">
        {{{message}}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {{/message}}

    {{! Add new company form }}
    <div class="card mb-4">
        <div class="card-header">
            <h3>{{#str}}addnewcompany, local_customerintel{{/str}}</h3>
        </div>
        <div class="card-body">
            <form method="post" action="">
                <input type="hidden" name="sesskey" value="{{sesskey}}">
                <input type="hidden" name="action" value="add">
                
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="name">{{#str}}companyname, local_customerintel{{/str}} <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="ticker">{{#str}}ticker, local_customerintel{{/str}}</label>
                        <input type="text" class="form-control" id="ticker" name="ticker" maxlength="10">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="type">{{#str}}companytype, local_customerintel{{/str}} <span class="text-danger">*</span></label>
                        <select class="form-control" id="type" name="type" required>
                            <option value="">{{#str}}select, local_customerintel{{/str}}</option>
                            <option value="customer">{{#str}}customer, local_customerintel{{/str}}</option>
                            <option value="target">{{#str}}target, local_customerintel{{/str}}</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="sector">{{#str}}sector, local_customerintel{{/str}}</label>
                        <input type="text" class="form-control" id="sector" name="sector" maxlength="100">
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="website">{{#str}}website, local_customerintel{{/str}}</label>
                        <input type="url" class="form-control" id="website" name="website" placeholder="https://">
                    </div>
                </div>
                
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-plus"></i> {{#str}}addcompany, local_customerintel{{/str}}
                </button>
            </form>
        </div>
    </div>

    {{! Companies list }}
    <div class="card">
        <div class="card-header">
            <h3>{{#str}}existingcompanies, local_customerintel{{/str}}</h3>
        </div>
        <div class="card-body">
            {{#hascompanies}}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>{{#str}}companyname, local_customerintel{{/str}}</th>
                            <th>{{#str}}ticker, local_customerintel{{/str}}</th>
                            <th>{{#str}}companytype, local_customerintel{{/str}}</th>
                            <th>{{#str}}sector, local_customerintel{{/str}}</th>
                            <th>{{#str}}website, local_customerintel{{/str}}</th>
                            <th>{{#str}}runs, local_customerintel{{/str}}</th>
                            <th>{{#str}}sources, local_customerintel{{/str}}</th>
                            <th>{{#str}}created, local_customerintel{{/str}}</th>
                            <th>{{#str}}actions, local_customerintel{{/str}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#companies}}
                        <tr>
                            <td><strong>{{name}}</strong></td>
                            <td>{{ticker}}</td>
                            <td>
                                <span class="badge {{type_badge}}">{{type}}</span>
                            </td>
                            <td>{{sector}}</td>
                            <td>
                                {{#website}}
                                <a href="{{website}}" target="_blank" rel="noopener">
                                    <i class="fa fa-external-link"></i>
                                </a>
                                {{/website}}
                                {{^website}}-{{/website}}
                            </td>
                            <td>
                                <span class="badge badge-secondary">{{runs_count}}</span>
                            </td>
                            <td>
                                <span class="badge badge-secondary">{{sources_count}}</span>
                            </td>
                            <td>{{timecreated_h}}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-sm btn-outline-primary" 
                                            data-toggle="modal" data-target="#editModal{{id}}">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                    {{#can_delete}}
                                    <form method="post" action="" style="display:inline;">
                                        <input type="hidden" name="sesskey" value="{{sesskey}}">
                                        <input type="hidden" name="action" value="delete">
                                        <input type="hidden" name="id" value="{{id}}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                onclick="return confirm('{{#str}}confirmdelete, local_customerintel{{/str}}');">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                    {{/can_delete}}
                                    {{^can_delete}}
                                    <button type="button" class="btn btn-sm btn-outline-secondary" disabled 
                                            title="{{#str}}cannotdelete_inuse, local_customerintel{{/str}}">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                    {{/can_delete}}
                                </div>

                                {{! Edit Modal }}
                                <div class="modal fade" id="editModal{{id}}" tabindex="-1" role="dialog">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">{{#str}}editcompany, local_customerintel{{/str}}: {{name}}</h5>
                                                <button type="button" class="close" data-dismiss="modal">
                                                    <span>&times;</span>
                                                </button>
                                            </div>
                                            <form method="post" action="">
                                                <div class="modal-body">
                                                    <input type="hidden" name="sesskey" value="{{sesskey}}">
                                                    <input type="hidden" name="action" value="edit">
                                                    <input type="hidden" name="id" value="{{id}}">
                                                    
                                                    <div class="form-group">
                                                        <label>{{#str}}companyname, local_customerintel{{/str}} <span class="text-danger">*</span></label>
                                                        <input type="text" class="form-control" name="name" value="{{name}}" required>
                                                    </div>
                                                    
                                                    <div class="form-group">
                                                        <label>{{#str}}ticker, local_customerintel{{/str}}</label>
                                                        <input type="text" class="form-control" name="ticker" value="{{ticker}}" maxlength="10">
                                                    </div>
                                                    
                                                    <div class="form-group">
                                                        <label>{{#str}}companytype, local_customerintel{{/str}} <span class="text-danger">*</span></label>
                                                        <select class="form-control" name="type" required>
                                                            <option value="customer" {{#type_customer}}selected{{/type_customer}}>
                                                                {{#str}}customer, local_customerintel{{/str}}
                                                            </option>
                                                            <option value="target" {{#type_target}}selected{{/type_target}}>
                                                                {{#str}}target, local_customerintel{{/str}}
                                                            </option>
                                                        </select>
                                                    </div>
                                                    
                                                    <div class="form-group">
                                                        <label>{{#str}}sector, local_customerintel{{/str}}</label>
                                                        <input type="text" class="form-control" name="sector" value="{{sector}}" maxlength="100">
                                                    </div>
                                                    
                                                    <div class="form-group">
                                                        <label>{{#str}}website, local_customerintel{{/str}}</label>
                                                        <input type="url" class="form-control" name="website" value="{{website}}">
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                                        {{#str}}cancel, local_customerintel{{/str}}
                                                    </button>
                                                    <button type="submit" class="btn btn-primary">
                                                        {{#str}}savechanges, local_customerintel{{/str}}
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {{/companies}}
                    </tbody>
                </table>
            </div>
            {{/hascompanies}}
            
            {{^hascompanies}}
            <div class="alert alert-info">
                <i class="fa fa-info-circle"></i> {{#str}}nocompanies, local_customerintel{{/str}}
            </div>
            {{/hascompanies}}
        </div>
    </div>
</div>