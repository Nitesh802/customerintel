{
  "type": "object",
  "required": ["risk_assessment", "mitigation_strategies", "resilience_measures", "crisis_management", "citations"],
  "properties": {
    "risk_assessment": {
      "type": "object",
      "required": ["top_risks", "risk_appetite", "overall_exposure"],
      "properties": {
        "top_risks": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["risk", "category", "likelihood", "impact", "trend"],
            "properties": {
              "risk": {"type": "string"},
              "category": {
                "type": "string",
                "enum": ["strategic", "operational", "financial", "compliance", "reputational", "cyber"]
              },
              "likelihood": {
                "type": "string",
                "enum": ["very_high", "high", "medium", "low", "very_low"]
              },
              "impact": {
                "type": "string",
                "enum": ["catastrophic", "major", "moderate", "minor", "negligible"]
              },
              "trend": {
                "type": "string",
                "enum": ["increasing", "stable", "decreasing"]
              }
            }
          }
        },
        "risk_appetite": {
          "type": "string",
          "enum": ["aggressive", "moderate", "conservative", "risk-averse"]
        },
        "overall_exposure": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"]
        }
      }
    },
    "mitigation_strategies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["risk", "strategy", "effectiveness"],
        "properties": {
          "risk": {"type": "string"},
          "strategy": {"type": "string"},
          "effectiveness": {
            "type": "string",
            "enum": ["highly_effective", "effective", "partially_effective", "ineffective"]
          },
          "implementation_status": {
            "type": "string",
            "enum": ["implemented", "in_progress", "planned", "not_started"]
          }
        }
      }
    },
    "resilience_measures": {
      "type": "object",
      "required": ["business_continuity", "disaster_recovery", "insurance_coverage"],
      "properties": {
        "business_continuity": {
          "type": "object",
          "required": ["plan_status", "testing_frequency"],
          "properties": {
            "plan_status": {
              "type": "string",
              "enum": ["comprehensive", "adequate", "basic", "insufficient"]
            },
            "testing_frequency": {"type": "string"},
            "last_test_date": {"type": "string"}
          }
        },
        "disaster_recovery": {
          "type": "object",
          "required": ["rto", "rpo", "backup_strategy"],
          "properties": {
            "rto": {"type": "string"},
            "rpo": {"type": "string"},
            "backup_strategy": {"type": "string"}
          }
        },
        "insurance_coverage": {
          "type": "object",
          "required": ["adequacy", "key_policies"],
          "properties": {
            "adequacy": {
              "type": "string",
              "enum": ["comprehensive", "adequate", "partial", "insufficient"]
            },
            "key_policies": {
              "type": "array",
              "items": {"type": "string"}
            }
          }
        }
      }
    },
    "crisis_management": {
      "type": "object",
      "required": ["preparedness", "response_capability", "communication_plan"],
      "properties": {
        "preparedness": {
          "type": "string",
          "enum": ["highly_prepared", "prepared", "somewhat_prepared", "unprepared"]
        },
        "response_capability": {
          "type": "string",
          "enum": ["excellent", "good", "fair", "poor"]
        },
        "communication_plan": {
          "type": "string",
          "enum": ["comprehensive", "adequate", "basic", "none"]
        },
        "recent_incidents": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["incident", "response", "outcome"],
            "properties": {
              "incident": {"type": "string"},
              "response": {"type": "string"},
              "outcome": {"type": "string"},
              "lessons_learned": {"type": "string"}
            }
          }
        }
      }
    },
    "compliance_and_regulatory": {
      "type": "object",
      "required": ["compliance_status", "regulatory_changes"],
      "properties": {
        "compliance_status": {
          "type": "string",
          "enum": ["fully_compliant", "mostly_compliant", "partially_compliant", "non_compliant"]
        },
        "regulatory_changes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["regulation", "impact", "readiness"],
            "properties": {
              "regulation": {"type": "string"},
              "impact": {"type": "string"},
              "readiness": {
                "type": "string",
                "enum": ["ready", "preparing", "not_ready"]
              }
            }
          }
        },
        "penalties_or_violations": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "citations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["source_id"],
        "properties": {
          "source_id": {"type": "integer"},
          "quote": {"type": "string"},
          "page": {"type": "string"},
          "url": {"type": "string"}
        }
      }
    }
  }
}