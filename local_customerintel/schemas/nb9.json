{
  "type": "object",
  "required": ["growth_strategy", "market_expansion", "product_development", "customer_acquisition", "citations"],
  "properties": {
    "growth_strategy": {
      "type": "object",
      "required": ["primary_drivers", "growth_targets", "investment_priorities"],
      "properties": {
        "primary_drivers": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string"}
        },
        "growth_targets": {
          "type": "object",
          "required": ["revenue_cagr", "timeline"],
          "properties": {
            "revenue_cagr": {"type": "string"},
            "timeline": {"type": "string"},
            "by_segment": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["segment", "target"],
                "properties": {
                  "segment": {"type": "string"},
                  "target": {"type": "string"}
                }
              }
            }
          }
        },
        "investment_priorities": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "market_expansion": {
      "type": "object",
      "required": ["geographic_expansion", "new_markets", "channel_strategy"],
      "properties": {
        "geographic_expansion": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["region", "opportunity", "timeline"],
            "properties": {
              "region": {"type": "string"},
              "opportunity": {"type": "string"},
              "timeline": {"type": "string"},
              "investment": {"type": "string"}
            }
          }
        },
        "new_markets": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["market", "entry_strategy"],
            "properties": {
              "market": {"type": "string"},
              "entry_strategy": {"type": "string"},
              "potential_size": {"type": "string"}
            }
          }
        },
        "channel_strategy": {"type": "string"}
      }
    },
    "product_development": {
      "type": "object",
      "required": ["pipeline", "innovation_focus", "time_to_market"],
      "properties": {
        "pipeline": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["product", "stage", "launch_date"],
            "properties": {
              "product": {"type": "string"},
              "stage": {
                "type": "string",
                "enum": ["concept", "development", "testing", "launch-ready"]
              },
              "launch_date": {"type": "string"},
              "revenue_potential": {"type": "string"}
            }
          }
        },
        "innovation_focus": {
          "type": "array",
          "items": {"type": "string"}
        },
        "time_to_market": {"type": "string"}
      }
    },
    "customer_acquisition": {
      "type": "object",
      "required": ["strategy", "customer_segments", "retention_rate"],
      "properties": {
        "strategy": {"type": "string"},
        "customer_segments": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["segment", "size", "growth_rate"],
            "properties": {
              "segment": {"type": "string"},
              "size": {"type": "string"},
              "growth_rate": {"type": "string"},
              "acquisition_cost": {"type": "string"}
            }
          }
        },
        "retention_rate": {"type": "string"},
        "lifetime_value": {"type": "string"}
      }
    },
    "m_and_a_activity": {
      "type": "object",
      "properties": {
        "recent_acquisitions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["target", "rationale", "value"],
            "properties": {
              "target": {"type": "string"},
              "rationale": {"type": "string"},
              "value": {"type": "string"},
              "integration_status": {"type": "string"}
            }
          }
        },
        "future_targets": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "citations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["source_id"],
        "properties": {
          "source_id": {"type": "integer"},
          "quote": {"type": "string"},
          "page": {"type": "string"},
          "url": {"type": "string"}
        }
      }
    }
  }
}