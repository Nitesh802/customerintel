{
  "type": "object",
  "required": ["financial_performance", "revenue_analysis", "profitability", "cash_flow", "balance_sheet", "citations"],
  "properties": {
    "financial_performance": {
      "type": "object",
      "required": ["revenue", "growth_rate", "trend"],
      "properties": {
        "revenue": {
          "type": "object",
          "required": ["current", "previous", "currency"],
          "properties": {
            "current": {"type": "number"},
            "previous": {"type": "number"},
            "currency": {"type": "string"}
          }
        },
        "growth_rate": {"type": "string"},
        "trend": {
          "type": "string",
          "enum": ["accelerating", "stable", "decelerating", "volatile"]
        },
        "segment_breakdown": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["segment", "revenue", "growth"],
            "properties": {
              "segment": {"type": "string"},
              "revenue": {"type": "string"},
              "growth": {"type": "string"}
            }
          }
        }
      }
    },
    "profitability": {
      "type": "object",
      "required": ["net_income", "ebitda", "margins"],
      "properties": {
        "net_income": {
          "type": "object",
          "required": ["current", "previous"],
          "properties": {
            "current": {"type": "number"},
            "previous": {"type": "number"}
          }
        },
        "ebitda": {
          "type": "object",
          "required": ["current", "previous"],
          "properties": {
            "current": {"type": "number"},
            "previous": {"type": "number"}
          }
        },
        "margins": {
          "type": "object",
          "required": ["gross", "operating", "net"],
          "properties": {
            "gross": {"type": "number"},
            "operating": {"type": "number"},
            "net": {"type": "number"}
          }
        }
      }
    },
    "cash_flow": {
      "type": "object",
      "required": ["operating", "investing", "financing", "free_cash_flow"],
      "properties": {
        "operating": {"type": "string"},
        "investing": {"type": "string"},
        "financing": {"type": "string"},
        "free_cash_flow": {"type": "string"},
        "cash_conversion": {"type": "string"}
      }
    },
    "balance_sheet": {
      "type": "object",
      "required": ["total_assets", "total_liabilities", "equity", "debt_to_equity"],
      "properties": {
        "total_assets": {"type": "string"},
        "total_liabilities": {"type": "string"},
        "equity": {"type": "string"},
        "debt_to_equity": {"type": "number"},
        "current_ratio": {"type": "number"},
        "working_capital": {"type": "string"}
      }
    },
    "financial_health_indicators": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["indicator", "value", "assessment"],
        "properties": {
          "indicator": {"type": "string"},
          "value": {"type": "string"},
          "assessment": {
            "type": "string",
            "enum": ["strong", "moderate", "weak", "critical"]
          }
        }
      }
    },
    "citations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["source_id"],
        "properties": {
          "source_id": {"type": "integer"},
          "quote": {"type": "string"},
          "page": {"type": "string"},
          "url": {"type": "string"}
        }
      }
    }
  }
}